apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: $name-ingress
  namespace: $namespace
  labels:
    app.kubernetes.io/name: "$name"
  annotations:
    kubernetes.io/ingress.allow-http: "false" # disable HTTP
spec:
  tls:
  - hosts:
    secretName: $name-tls-secret
  rules:
  - http:
      paths:
        - path: /*
          backend:
            serviceName: trillo-rt
            servicePort: 443
