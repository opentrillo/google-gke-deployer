apiVersion: v1
kind: PersistentVolume
metadata:
  name: trillo-repo-pv
  namespace: $namespace
spec:
  capacity:
    storage: 100Gi
  accessModes:
    - ReadWriteMany
  nfs:
    server: repo-nfs.$namespace.svc.cluster.local
    path: "/"
  claimRef:
    namespace: $namespace
    name: trillo-repo-pvc
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: trillo-repo-pvc
  namespace: $namespace
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: ""
  resources:
    requests:
      storage: 100Gi
---
